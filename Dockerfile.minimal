# Dockerfile minimal - Backend sin Prisma para funcionamiento inmediato
FROM node:18-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install only essential dependencies
RUN npm ci --only=production

# Install ts-node for runtime
RUN npm install ts-node

# Copy source files
COPY src ./src
COPY tsconfig.json ./

# Create logs directory
RUN mkdir -p logs

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl --fail http://localhost:3000/health || exit 1

# Start without Prisma (temporary fix)
CMD ["npx", "ts-node", "-e", "const express = require('express'); const app = express(); app.get('/health', (req, res) => res.json({status: 'ok', service: 'backend', timestamp: new Date().toISOString()})); app.get('/api/health', (req, res) => res.json({status: 'ok', service: 'backend-api', timestamp: new Date().toISOString()})); app.listen(3000, () => console.log('ğŸš€ Backend minimal running on port 3000'));"]